<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_dialog">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_margin"
        android:textColor="@color/colorAppBlack"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@null"
        android:text="@string/ok_"
        android:textAllCaps="false"
        android:textColor="@color/colorEnabled"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorEnabled"
        android:textSize="@dimen/text_size_14sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_ok"
        app:layout_constraintRight_toLeftOf="@+id/btn_ok" />

</androidx.constraintlayout.widget.ConstraintLayout>